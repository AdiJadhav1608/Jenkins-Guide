pipeline {

    // ðŸ”¹ Defines where the pipeline will run
    agent any

    // ðŸ”¹ Pipeline stages
    stages {

        stage('Build') {

            steps {

                // ðŸ”¸ Executes shell command
                echo 'Building the application...'
            }
        }
    }
}

/*
--------------------------------------------
ðŸ§  EXPLANATION
--------------------------------------------

pipeline      â†’ Mandatory block for Declarative Pipeline
agent any     â†’ Run on any available Jenkins agent
stages        â†’ Contains all stages
stage('Build')-> Logical phase of the pipeline
steps         â†’ Actual commands executed
echo          â†’ Prints message in Jenkins console
*/
