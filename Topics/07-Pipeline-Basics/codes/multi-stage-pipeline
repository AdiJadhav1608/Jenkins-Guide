pipeline {

    // ðŸ”¹ Run pipeline on any agent
    agent any

    stages {

        stage('Build') {
            steps {
                echo 'Compiling source code...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running unit tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}

